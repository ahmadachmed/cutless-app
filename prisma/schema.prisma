datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?
  role      String // "customer", "capster", "owner", "admin", "co-owner"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  barbershops  Barbershop[]
  capster      Capster?
  appointments Appointment[]
}

model Barbershop {
  id               String    @id @default(cuid())
  name             String
  address          String
  phoneNumber      String
  ownerId          String
  subscriptionPlan String // free/pro/enterprise
  openTime         String?   @default("09:00")
  closeTime        String?   @default("21:00")
  breakStartTime   String?
  breakEndTime     String?
  daysOpen         String?   @default("Mon,Tue,Wed,Thu,Fri,Sat")
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  deletedAt        DateTime?

  owner        User          @relation(fields: [ownerId], references: [id])
  capsters     Capster[]
  services     Service[]
  appointments Appointment[]
}

model Capster {
  id             String   @id @default(cuid())
  userId         String   @unique
  barbershopId   String
  specialization String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user         User          @relation(fields: [userId], references: [id])
  barbershop   Barbershop    @relation(fields: [barbershopId], references: [id])
  appointments Appointment[]
}

model Service {
  id           String   @id @default(cuid())
  name         String
  price        Float
  duration     Int // duration in minutes
  barbershopId String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  barbershop   Barbershop    @relation(fields: [barbershopId], references: [id])
  appointments Appointment[]
}

model Appointment {
  id           String   @id @default(cuid())
  customerId   String
  barbershopId String
  capsterId    String
  serviceId    String
  date         DateTime
  status       String   @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  customer   User       @relation(fields: [customerId], references: [id])
  barbershop Barbershop @relation(fields: [barbershopId], references: [id])
  capster    Capster    @relation(fields: [capsterId], references: [id])
  service    Service    @relation(fields: [serviceId], references: [id])
}
